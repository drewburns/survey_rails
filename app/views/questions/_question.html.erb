<%= form_for question , :html=> {:class => 'question_form'} do |f| %>

	<div class="field">
    <%= f.label :text, "Question" %><br />
    <h6 class="question_text_solid"><%= question.text %></h6>
    <%= f.text_field :text, :class => "question_text_edit" %>
  </div>

  <div class="field">
    <%= f.label :question_type %>
    <h6 class="question_type_solid"><%= question.question_type %></h6>
	<!-- 		<%= select_tag(:question_type, options_for_select(["dropdown", "multiple choice"], selected: :question_type ),:class => "question_type_edit") %> 
	-->
	<%= f.text_field :question_type, :class => "question_type_edit" %>
	</div>

	<button type="button" class="button tiny question_text_button_edit">Edit</button>
  <div class="actions question_text_button_confirm">
  	<%= f.submit "Confirm Changes" %>
	</div>

<% end %>

